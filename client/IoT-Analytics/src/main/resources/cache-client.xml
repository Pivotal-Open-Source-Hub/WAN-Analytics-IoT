<?xml version="1.0"?>
        <!DOCTYPE client-cache PUBLIC
                "-//GemStone Systems, Inc.//GemFire Declarative Caching 8.0//EN"
                "http://www.gemstone.com/dtd/cache8_0.dtd">

        <!--
          | Client.xml
          |
          | Configures a region as a client region in a client/server cache. The
          | region's pool connects to a cacheserver listening on port 40404.
         -->
<client-cache>
    <pool name="client" pr-single-hop-enabled="true" >
        <locator host="127.0.0.1" port="10334" />
    </pool>
    <pdx read-serialized="false">
		<pdx-serializer>
			<class-name>
       			com.gemstone.gemfire.pdx.ReflectionBasedAutoSerializer
      		</class-name>
      		<parameter name="classes">
      			<string>io.pivotal.demo.ProbeRequest</string>
     		</parameter>    		
		</pdx-serializer>
    </pdx>

    <region name="Probe_requests" >
        <region-attributes refid="CACHING_PROXY">
        </region-attributes>
    </region>
</client-cache>
